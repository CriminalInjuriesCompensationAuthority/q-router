{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "#contact",
    "title": "Form",
    "type": "object",
    "properties": {
        "how-contacted": {
            "title": "How do you want to be contacted?",
            "type": "string",
            "oneOf": [
                {
                    "title": "Email",
                    "enum": ["email"]
                },
                {
                    "title": "Phone",
                    "enum": ["phone"]
                },
                {
                    "title": "Text message",
                    "enum": ["text"]
                }
            ]
        },
        "contact-by-email": {
            "title": "Email address",
            "type": "string",
            "format": "email"
        },
        "contact-by-text": {
            "title": "Phone number",
            "type": "string"
        },
        "contact-by-phone": {
            "title": "Mobile phone number",
            "type": "string"
        }
    },
    "oneOf": [
        {
            "properties": {
                "how-contacted": {
                    "enum": ["email"]
                }
            },
            "required": ["contact-by-email"]
        },
        {
            "properties": {
                "how-contacted": {
                    "enum": ["phone"]
                }
            },
            "required": ["contact-by-phone"]
        },
        {
            "properties": {
                "how-contacted": {
                    "enum": ["text"]
                }
            },
            "required": ["contact-by-text"]
        }
    ]
}
