{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "#contact",
    "title": "Form",
    "type": "object",
    "properties": {
        "how-contacted": {
            "title": "How do you want to be contacted?",
            "type": "string",
            "oneOf": [
                {
                    "title": "Email",
                    "enum": ["email"]
                },
                {
                    "title": "Phone",
                    "enum": ["phone"]
                },
                {
                    "title": "Text message",
                    "enum": ["text"]
                }
            ]
        }
    },
    "anyOf": [
        {
            "properties": {
                "how-contacted": {
                    "enum": ["email"]
                },
                "contact-by-email": {
                    "title": "Email address",
                    "type": "string",
                    "format": "email"
                }
            },
            "required": ["contact-by-email"]
        },
        {
            "properties": {
                "how-contacted": {
                    "enum": ["phone"]
                },
                "contact-by-phone": {
                    "title": "Phone number",
                    "type": "string"
                }
            },
            "required": ["contact-by-phone"]
        },
        {
            "properties": {
                "how-contacted": {
                    "enum": ["text"]
                },
                "contact-by-text": {
                    "title": "Text message",
                    "type": "string"
                }
            },
            "required": ["contact-by-text"]
        }
    ]
}